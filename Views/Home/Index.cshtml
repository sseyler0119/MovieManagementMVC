@{
    ViewBag.Title = "Home Page";
}

<!-- Landing Page, Introduce user to what the application does-->
<div class="jumbotron landing-page-header">
    <h1>Movie Management System</h1>
    <p class="lead header-text">
        This is a simple ASP.NET MVC web app designed as a content management system that allows users to keep track of their movie collections with basic CRUD functionality. <a>@Html.ActionLink("Movie Management System", "Index", "Home", new { @class = "link-text" })</a>
        directs users back to this landing page,<a>@Html.ActionLink("View Movies", "Index", "Movies", new { @class = "link-text" })</a>
        directs users to the Index page in the Movies view to display all films in the database. <a>@Html.ActionLink("Add Movie", "Create", "Movies", new { @class = "link-text" })</a> directs users to the Create page in the Movies view to add a new film to the database, and <a>@Html.ActionLink("Family Friendly", "Index", "Admin", new { @class = "link-text" })</a> directs users to the Index page in the Admin view where a partial view displays the Title, Director, and Rating for all family-friendly movies in the database
    </p>
</div>

<div class="row landing-page-row">
    <div class="col-md-3">
        <div class="mini-card">
            <div class="card-container">
                <h2>Create</h2>
                <p>
                    Create a new movie entry and save the record to the database.
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="mini-card">
            <div class="card-container">
                <h2>Read</h2>
                <p>
                    Movies are retrieved from the database and the entry details are displayed to the user.
                </p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="mini-card">
            <div class="card-container">
                <h2>Update</h2>
                <p>
                    Retrieve an entry from the database, modify its contents, and save it back to the database.
                </p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="mini-card">
            <div class="card-container">
                <h2>Delete</h2>
                <p>
                    Permanently remove a movie from the database.
                </p>
            </div>
        </div>
    </div>
</div>